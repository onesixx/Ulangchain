{
    "version": 1,
    "disable_existing_loggers": false,
    "filters": {},
    "formatters": {
        "simple": {
            "format": "[%(levelname)s] | %(pathname)s:%(lineno)d | \n=> | %(message)s  ",
            "datefmt": "%yY-%m-%d %H:%M:%S",
            "class": "rosie.log.log_color.ColoredFormatter"
        },
        "detail": {
            "format": "[%(levelname)s] %(asctime)s | %(pathname)s:%(lineno)d | \n=> | %(message)s  ",
            "datefmt": "%m-%d %H:%M:%S",
            "class": "rosie.log.log_color.ColoredFormatter2"
        },
        "verbose": {
            "format": "[%(asctime)s | %(levelname)s | %(module)s | %(filename)s:%(lineno)d ] %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%S%z",
            "class": "rosie.log.log_color.ColoredFormatter2"
        }
    },
    "handlers": {
        "info_handler": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple",
            "stream": "ext://sys.stdout",
            "filters": ["info_filter"]
        },
        "debug_handler": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "detail",
            "stream": "ext://sys.stdout",
            "filters": ["debug_filter"]
        },
        "error_handler": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "WARNING",
            "formatter": "verbose",
            "maxBytes": 10240,
            "backupCount": 16,
            "encoding": "utf8"
        },
        "queue_handler": {
            "class": "logging.handlers.QueueHandler",
            "level": "DEBUG",
            "handlers": [
                "info_handler",
                "debug_handler",
                "file"
            ],
            "respect_handler_level": true
        }
    },
    "loggers": {
        "root": {
            "level": "DEBUG",
            "handlers": [
                "info_handler",
                "debug_handler",
                "error_handler",
                "queue_handler"
            ]
        }
    }
}